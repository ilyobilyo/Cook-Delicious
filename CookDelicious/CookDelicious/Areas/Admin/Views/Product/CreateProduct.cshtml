@using CookDelicious.Core.Models.Admin.Product
@model CreateProductViewModel

<head>
    <meta charset="utf-8">
    <!--  All snippets are MIT license http://bootdey.com/license -->
    <title>profile with data and skills - Bootdey.com</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/my-profile.css">
    <link rel="stylesheet" href="~/plugins/toastr/toastr.min.css">
</head>
<body>
<div class="container">
    <div class="main-body">
    
          <!-- Breadcrumb -->
          <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/Admin">Home</a></li>
              <li class="breadcrumb-item"><a href="/Admin/Product/All">Products</a></li>
              <li class="breadcrumb-item active" aria-current="page">Create Product</li>
            </ol>
          </nav>
          <!-- /Breadcrumb -->
          <div class="row gutters-sm">
            </div>
                <div class="col-md-8">
                    <h2>Create Product</h2>
            <form id="editPforile" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Product Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input asp-for="Name" class="form-control" aria-required="true" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Product Type</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input asp-for="Type" class="form-control" aria-required="true" />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">ImageUrl</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input asp-for="ImageUrl" class="form-control" aria-required="true" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                  </div>
                  </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-12">
                      <button id="login-submit" type="submit" class="btn btn-info " href="/Product/All">Create</button>
                    </div>
                  </div>
            </form>
            </div>
        </div>
    </div>
</body>

<partial name="_ValidationScriptsPartial" />

