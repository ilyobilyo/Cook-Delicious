@using CookDelicious.Core.Models.Admin
@using CookDelicious.Core.Models.Paiging
@model PagingList<UserListViewModel>



<section class="best-receipe-area">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-header">
						<h3 class="card-title">Потребители</h3>
					</div>
					<!-- /.card-header -->
					<div class="card-body table-responsive p-0">
						<table class="table table-hover text-nowrap">
							<thead>
								<tr>
									<th>Username</th>
									<th>Имейл</th>
									<th>Комадни</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var user in Model)
								{
									<tr>
										<td>@user.Username</td>
										<td>@user.Email</td>
										<td>
											<a asp-area="admin" asp-action="edit" asp-controller="user" asp-route-id="@user.Id" class="btn btn-block btn-outline-info btn-xs">Редактирай</a>
											<a asp-area="admin" asp-action="roles" asp-controller="user" asp-route-id="@user.Id" class="btn btn-block btn-outline-warning btn-xs">Роли</a>
										</td>
									</tr>
								}
							</tbody>
							@{
								var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
								var nextDisabled = !Model.HasNextPage ? "disabled" : "";
							}
						</table>
					</div>
					<a asp-action="ManageUsers" asp-route-pageNumber="@(Model.PageIndex - 1)" class="btn btn-block btn-outline-primary btn-sm @prevDisabled">Previous</a>
					<a asp-action="ManageUsers" asp-route-pageNumber="@(Model.PageIndex + 1)" class="btn btn-block btn-outline-primary btn-sm @nextDisabled">Next</a>
					<!-- /.card-body -->
				</div>
				<!-- /.card -->
			</div>
		</div>
	</div>
</section>

