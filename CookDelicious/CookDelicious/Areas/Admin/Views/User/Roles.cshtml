@using CookDelicious.Core.Models.Admin
@model UserRolesViewModel
@{
	ViewData["Title"] = "User Roles";
	var items = (List<SelectListItem>)ViewBag.RoleItems;
}

<div class="container">
	<div class="row">
		<div class="col-4">
			<form id="roles" method="post">
				<input type="hidden" name="UserId" value="@Model.Id" />
				<input type="hidden" name="Name" value="@Model.Username" />
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-floating">
					<h3>User: @Html.DisplayFor(m => m.Username)</h3>
				</div>
				<div class="form-floating">
					<div class="form-group">
						<label>User Roles</label>
						<select asp-for="RoleNames" asp-items="@items" class="form-control">
						</select>
					</div>
				</div>
				<div class="row">&nbsp;</div>
				<div class="row">
					<div class="col-4">
						<button id="login-submit" type="submit" class="custom-button">Submit</button>
					</div>
					<!-- /.col -->
				</div>
			</form>
		</div>
	</div>
</div>

