@using CookDelicious.Core.Models.User
@model UserProfileViewModel

<head>
	<meta charset="utf-8">
	<!--  All snippets are MIT license http://bootdey.com/license -->
	<title>profile with data and skills - Bootdey.com</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
	<link rel="stylesheet" href="~/css/my-profile.css">
	<link rel="stylesheet" href="~/plugins/toastr/toastr.min.css">
</head>
<body>
		<div class="container">
				<div class="main-body">
					<!-- Breadcrumb -->
				<nav aria-label="breadcrumb" class="main-breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="/">Home</a></li>
						<li class="breadcrumb-item"><a href="/User/Profile">User</a></li>
						<li class="breadcrumb-item active" aria-current="page">User Profile</li>
					</ol>
				</nav>
				<!-- /Breadcrumb -->

				<div class="row gutters-sm">
					<div class="col-md-4 mb-3">
						<div class="card">
							<div class="card-body">
								<div class="d-flex flex-column align-items-center text-center">
									<img src="~/img/profile-img/@Model.ImageUrl" alt="Sloji si snimka" class="rounded-circle" width="150">
									<div class="mt-3">
										<h4>@Model.Username</h4>
										<input type="hidden" name="Id" value="@Model.Id" />
										<p class="text-secondary mb-1">@Model.Job</p>
										<p class="text-muted font-size-sm">@Model.Town</p>
										<a class="btn btn-primary" asp-action="CreateRecipe" asp-route-id="@Model.Id" asp-controller="Recipe">Create Recipe</a>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="col-md-8">
						<div class="card mb-3">
							<div class="card-body">
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Username</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										@Model.Username
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">FirstName</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										@Model.FirstName
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">LastName</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										@Model.LastName
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Email</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										@Model.Email
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Current Job</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										@Model.Job
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Address</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										@Model.Address
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-12">
										<a class="btn btn-info " asp-area="" asp-action="EditProfile" asp-controller="User">Edit</a>
									</div>
								</div>
							</div>
						</div>
						<div class="col-sm-6 mb-3">
							<div class="card h-100" style="width: 700px">
								<div class="card-body">
									<h6 class="d-flex align-items-center mb-3" style="font-size: 25px">My Recipes</h6>
									<ul style="overflow: auto; width: 670px; height: 230px;">
										@foreach (var recipe in Model.MyRecipes)
										{
											<li style="font-size: 30px"><a style="font-size: 20px" asp-action="RecipePost" asp-controller="Recipe" asp-route-Id="@recipe.Id">@recipe.Name</a></li>
										}
									</ul>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
</body>