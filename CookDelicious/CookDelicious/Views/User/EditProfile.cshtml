@using CookDelicious.Core.Models.User
@model UserEditProfileViewModel

<head>
	<meta charset="utf-8">
	<!--  All snippets are MIT license http://bootdey.com/license -->
	<title>profile with data and skills - Bootdey.com</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
	<link rel="stylesheet" href="~/css/my-profile.css">
	<link rel="stylesheet" href="~/plugins/toastr/toastr.min.css">
</head>
<body>
		<div class="main-body">

			<!-- Breadcrumb -->
			<nav aria-label="breadcrumb" class="main-breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="/">Начало</a></li>
					<li class="breadcrumb-item"><a href="/User/MyProfile">Моят профил</a></li>
					<li class="breadcrumb-item active" aria-current="page">Редактирай профил</li>
				</ol>
			</nav>
			<!-- /Breadcrumb -->

			<div class="row gutters-sm">
				<div class="col-md-4 mb-3">
					<div class="card">
						<div class="card-body">
							<div class="d-flex flex-column align-items-center text-center">
								<img src="~/img/profile-img/@Model.ImageUrl" alt="Липсва снимка" class="rounded-circle" width="150">
								<div class="mt-3">
									<h4>@Model.Username</h4>
									<p class="text-secondary mb-1">@Model.Job</p>
									<p class="text-muted font-size-sm">@Model.Town</p>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-8">
					<form id="editPforile" method="post">
						<input type="hidden" name="Id" value="@Model.Id" />
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="card mb-3">
							<div class="card-body">
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Username</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input asp-for="Username" class="form-control" aria-required="true" />
										<span asp-validation-for="Username" class="text-danger"></span>
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Име</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input asp-for="FirstName" class="form-control" aria-required="true" />
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Фамилия</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input asp-for="LastName" class="form-control" aria-required="true" />
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Имейл</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input asp-for="Email" class="form-control" aria-required="true" />
										<span asp-validation-for="Email" class="text-danger"></span>
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Град</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input asp-for="Town" class="form-control" aria-required="true" />
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Настояща работа</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input asp-for="Job" class="form-control" aria-required="true" />
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Адрес</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input asp-for="Address" class="form-control" aria-required="true" />
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Url на снимка</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input asp-for="ImageUrl" class="form-control" aria-required="true" />
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-12">
										<button id="login-submit" type="submit" class="btn btn-info " href="/User/Profile">Готово</button>
									</div>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
</body>
<partial name="_ValidationScriptsPartial" />
