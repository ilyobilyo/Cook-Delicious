@using CookDelicious.Core.Models.Forum
@model CreatePostViewModel

<head>
	<meta charset="utf-8">
	<!--  All snippets are MIT license http://bootdey.com/license -->
	<title>profile with data and skills - Bootdey.com</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
	<link rel="stylesheet" href="~/css/my-profile.css">
	<link rel="stylesheet" href="~/plugins/toastr/toastr.min.css">
</head>
<body>
	<div class="container">
		<div class="main-body">

			<!-- Breadcrumb -->
			<nav aria-label="breadcrumb" class="main-breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="/">Начало</a></li>
					<li class="breadcrumb-item"><a href="/Forum/Home">Форум</a></li>
					<li class="breadcrumb-item active" aria-current="page">Публикувай пост</li>
				</ol>
			</nav>
			<!-- /Breadcrumb -->

			<div class="row gutters-sm">
				<div class="col-md-4 mb-3">
					<div class="card">
						<div class="card-body">
							<div class="d-flex flex-column align-items-center text-center">
								<img src="~/img/bg-img/defaultRecipe.jpg" alt="Admin" class="rounded-circle" width="150">
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-8">
					<form id="createPost" method="post">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="card mb-3">
							<div class="card-body">
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Заглавие</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input asp-for="Title" class="form-control" aria-required="true" />
										<span asp-validation-for="Title" class="text-danger"></span>
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Url на снимка</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input asp-for="ImageUrl" class="form-control" aria-required="true" />
										<span asp-validation-for="ImageUrl" class="text-danger"></span>
									</div>
								</div>
								<hr>
								<div class="row" data-select2-id="29">
									<div class="col-sm-3">
										<h6 class="mb-0">Категория</h6>
									</div>
									<select class="col-sm-9  text-secondary" asp-for="Category" data-select2-id="1" tabindex="-1" aria-hidden="true">
										@foreach (var category in Model.Categories)
										{
											<option data-select2-id="35">@category</option>
										}
									</select>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Съдържание</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<textarea asp-for="Description" rows="5" cols="60" class="form-control" aria-required="true" name="Description" id="Description"></textarea>
										<span asp-validation-for="Description" class="text-danger"></span>
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-12">
										<button id="login-submit" type="submit" class="btn btn-info " href="/User/Profile">Публикувай</button>
									</div>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</body>

<partial name="_ValidationScriptsPartial" />
